<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.NoticeMapper">


    <select id="selectAll" resultType="com.example.entity.Notice">
        select * from `notice`
        <where>
            <if test="title != null and title !='' ">title like '%${title}%'</if>
            <if test="content != null and content !='' ">and content like '%${content}%'</if>
        </where>
        order by id desc
    </select>

    <insert id="insert">
        insert into `notice`(title,content,time)
        values(#{title},#{content},#{time})
    </insert>

    <update id="update">
        update `notice` set title=#{title},content=#{content},time=#{time} where
        id=#{id}
    </update>

</mapper>