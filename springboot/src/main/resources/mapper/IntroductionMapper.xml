<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.IntroductionMapper">


    <select id="selectAll" resultType="com.example.entity.Introduction">
        select * from `introduction`
        <where>
            <if test="title != null and title !='' ">title like '%${title}%'</if>
            <if test="content != null and content !='' ">and content like '%${content}%'</if>
        </where>
        order by id desc
    </select>

    <insert id="insert">
        insert into `introduction`(title,img,content,time,category_id)
        values(#{title},#{img},#{content},#{time},#{categoryId})
    </insert>

    <update id="update">
        update `introduction` set title=#{title},img=#{img},content=#{content},time=#{time},category_id=#{categoryId} where
        id=#{id}
    </update>

</mapper>