<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.UserMapper">


    <select id="selectAll" resultType="com.example.entity.User">
        select * from `user`
        <where>
            <if test="name != null and name !='' ">name like '%${name}%'</if>
            <if test="username != null and username !='' ">and username like '%${username}%'</if>
            <if test="ids != null and ids != ''">
                and id in
                <foreach item="id" collection="idArr" separator="," open="(" close=")">
                    #{id}
                </foreach>
            </if>
        </where>
        order by id desc
    </select>

    <insert id="insert">
        insert into `user`(username,password,name,phone,email,role,avatar)
        values(#{username},#{password},#{name},#{phone},#{email},#{role},#{avatar})
    </insert>

    <update id="update">
        update `user` set username=#{username},password=#{password},name=#{name},
        phone=#{phone},email=#{email},role= #{role},avatar= #{avatar} where
        id=#{id}
    </update>

</mapper>